<!doctype html>
<html lang="en">
<head>
    {{> head}}


</head>
<body>
{{> menu this.menuState }}
<form class="ui form container" action="/OTRA/sessoes/create" method="POST">
    <h4 class="ui dividing header">Informação da Sessão</h4>
    <div class="field">
        <label>Cinema</label>
    <select name="cinemaid">
        {{#each cinemas}}

            <option value="{{id}}">{{cidade_localizacao}} - {{name}}</option>

        {{/each}}
    </select>
   </div>

    <div class="field">
        <label>Sala</label>
        <input type="number" min="1" name="idsala"  required>
    </div>

    <div class="field">
        <label>Filme</label>
    <select name="filmedata">
    {{#each movies}}

        <option value="{  &quot;movieid&quot; : &quot;{{id}}&quot; , &quot;originalTitle&quot; : &quot;{{originalTitle}}&quot;, &quot;img&quot; : &quot;{{img}}&quot; }">{{originalTitle}}        </option>
    {{/each}}
    </select>
   </div>

<div class="field">
    <label>Data</label>
    <select name="day">
        <option value ="1">1</option>
        <option value ="2">2</option>
        <option value ="3">3</option>
        <option value ="4">4</option>
        <option value ="5">5</option>
