<!doctype html>
<html lang="en">
  <head>
    {{> head}}
  </head>
  <body>
    {{> menu this.menuState}}    

    <div class="ui segment" style="padding: 50pt">
      <div class="ui centered raised card">
        <form class="ui form content" method="POST" action="{{action}}">
          <div class="field">
            <label>Username</label>
            <input type="text" name="username" required />
          </div>
          <div class="field">
            <label>Password</label>
            <input type="password" name="password" required />
          </div>
          {{#if this.failedAttempt}}
            <div style="color: red; text-align: center; margin-bottom: 1em">{{failedAttempt}}</div>
          {{/if}}
          <div class="grid">
          <button class="ui secondary button" type="submit" name="btn_login" value="login_user">Sign in</button>
          <button class="ui button" type="submit" name="btn_login" value="register_user">Register</button>
          </div>

        </form>
      </div>
    </div>
  </body>
</html>